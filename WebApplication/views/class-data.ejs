<html>
  <head>
    <title>Student Result</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="/add-class.css" />
  </head>
  <body>
    <div class="admin-container">
      <div class="admin-nav">
        <div class="row">
          <div class="col-4"><h4>ADD CLASS DATA</h4></div>
          <div class="col-8"><a href="/admin">ADMIN</a></div>
        </div>
      </div>
      <hr />
      <div class="admin-body">
        <div class="form-body">
          <form
            class="row g-3"
            method="POST"
            ,
            action="/admin/class-data/<%= queryClassID %>"
          >
            <div class="col-md-6">
              <label for="inputEmail4" class="form-label">Student Name</label>
              <input
                type="text"
                class="form-control"
                id="inputEmail4"
                name="name"
              />
            </div>
            <div class="col-md-6">
              <label for="inputPassword4" class="form-label">Roll No.</label>
              <input
                type="text"
                class="form-control"
                id="inputPassword4"
                name="rollno"
              />
            </div>
            <div class="col-md-6">
              <label for="inputEmail4" class="form-label">Branch</label>
              <input
                type="text"
                class="form-control"
                id="inputEmail4"
                name="batch"
              />
            </div>
            <div class="col-md-6">
              <label for="inputPassword4" class="form-label">Semester</label>
              <input
                type="text"
                class="form-control"
                id="inputPassword4"
                name="semester"
              />
            </div>
            <div class="col-md-6">
              <label for="inputEmail4" class="form-label">Subject 1</label>
              <input
                type="text"
                class="form-control"
                id="inputEmail4"
                placeholder="Big Data"
                name="bigData"
              />
            </div>
            <div class="col-md-6">
              <label for="inputPassword4" class="form-label">Subject 2</label>
              <input
                type="text"
                class="form-control"
                id="inputPassword4"
                placeholder="Disaster Management"
                name="disasterManagement"
              />
            </div>

            <div class="col-12">
              <button type="submit" class="btn btn-primary add-class-btn">
                ADD Student
              </button>
            </div>
          </form>
        </div>
        <div class="admin-classes">
          <h5 class="mt-5">Students List</h5>
          <div class="student-container">
            <% for(var i=0; i < studentArray.length; i++) { %>
            <div class="row students-data">
              <div class="col-12 student-report-header">
                <h2>Bikaner Technical University, Bikaner</h2>
                <h3>B.Tech Examination on June-2022</h3>
              </div>
              <div class="col-md-6">
                <label for="">Student Name :</label>
                <p><%= studentArray[i].name %></p>
              </div>
              <div class="col-md-6">
                <label for="">Roll No. :</label>
                <p><%= studentArray[i].rollno %></p>
              </div>
              <div class="col-md-6">
                <label for="">Branch :</label>
                <p><%= studentArray[i].batch %></p>
              </div>
              <div class="col-md-6">
                <label for="">Semester :</label>
                <p><%= studentArray[i].semester %></p>
              </div>
              <div class="col-md-6">
                <label for="">Subject 1 :</label>
                <p><%= studentArray[i].bigData %></p>
              </div>
              <div class="col-md-6">
                <label for="">Subject 2 :</label>
                <p><%= studentArray[i].disasterManagement %></p>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
